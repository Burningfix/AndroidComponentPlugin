<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="Hook AMS 启动未注册的普通Activity"
        tools:ignore="HardcodedText" />


    <Button
        android:id="@+id/btn_start_appcompat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hook AMS 启动未注册的AppCompatActivity"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_download_plugin_apk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="下载插件APK"
        tools:ignore="HardcodedText" />


    <Button
        android:id="@+id/btn_start_plugin_apk_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="启动插件APK中普通Activity"
        tools:ignore="HardcodedText" />


    <Button
        android:id="@+id/btn_start_plugin_apk_appcompat_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="启动插件APK中AppCompatActivity"
        tools:ignore="HardcodedText" />
</LinearLayout>